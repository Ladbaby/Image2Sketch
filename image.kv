#:kivy 1.0.9
#:import kivy kivy
#:import win kivy.core.window

Root:
    photo_original: photo_original
    photo_processed: photo_processed

    BoxLayout:
        id: reactive_layout
        padding: '2sp'
        orientation: 'vertical'
        size_hint: 1, 1
        
        BoxLayout:
            size_hint_y: None
            height: reactive_layout.height * 0.1
            Button:
                text: 'Load'
                font_size: 14
                on_release: root.show_load()
            Button:
                text: 'Save'
                font_size: 14
                on_release: root.show_save()

        BoxLayout:
            Image:
                id: photo_original
                source: root.source_original
                size: 400, 400 / self.image_ratio

            Image:
                id: photo_processed
                source: root.source_processed
                size: 400, 400 / self.image_ratio

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            font_name: root.font
            path: root.start_path

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            font_name: root.font
            on_selection: text_input.text = self.selection and self.selection[0] or ''
            path: root.start_path

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)
